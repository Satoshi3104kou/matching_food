.single-main1
  .single-main1__head
    %h2 
      ログイン
  .single-main1__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .l-single-content
        .l-single-content__group
          %label メールアドレス
          = f.email_field :email, autofocus: true
        .l-single-content__group
          %label{:for => ""} パスワード(英数字7文字以上)
          = f.password_field :password, autocomplete: "off"
        .actions
          = f.submit "ログイン", class: 'next-btn'


